<% include ../partials/header.ejs %>
<main class="container">
    <div class="col-lg-12 text-center"><h1 class="name fadeInDown animated">Edit A Contact</h1>
    </div>
    <span class="col-md-6 col-md-offset-4">

      <div class="col-sm-6">
           <form method="post">
                <fieldset class="form-group">
                   <label for="name">Contact Name: </label>
					<input name="name" class="form-control" required value="<%- contact.name %>" />
                </fieldset>
                <fieldset class="form-group">
                   <label for="email">Email Address: </label>
					<input name="email" class="form-control" required value="<%- contact.email %>" />
                 </fieldset>
                <fieldset class="form-group">
                   <label for="cnumber">Contact Number: </label>
					<input name="cnumber" class="form-control" required value="<%- contact.contactnumber %>" />
                 </fieldset>
                <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary" title="Update">
                    <i class="fa fa-pencil-square-o"></i> Update</button>
                <a href="/contacts/delete/<%= contact._id %>" title="Delete" onclick="return confirm('Are you sure you want to delete this contact ?');" class="btn btn-danger">
                    <i class="fa fa-trash-o"></i> Delete
                </a>
                <a href="/contacts" title="Cancel"  class="btn btn-default">
                    <i class="fa fa-undo"></i>  Cancel
                </a>
            </fieldset>

            </form>
         </div>
    </span>
</main>

<% include ../partials/footer.ejs %>